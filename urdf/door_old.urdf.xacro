<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="room_door">

  <link name="base_link">
     <inertial>
      <!-- <origin xyz="0 0 0"/>  -->
      <mass value="1000.0" />
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin xyz="0 0 1.1" rpy="0 0 0" />
      <geometry>
        <cylinder length="2.2" radius="0.05"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 1.1" rpy="0 0 0" />
      <geometry>
        <cylinder length="2.2" radius="0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="door">
     <inertial>
      <!-- <origin xyz="0 0.45 0"/>  -->
      <mass value="1.0" />
      <inertia  ixx="1.0" ixy="0.0"  ixz="0.0"  iyy="1.0"  iyz="0.0"  izz="1.0" />
    </inertial>
    <visual>
      <origin xyz="0 0.45 0" rpy="0 0 0" />
      <geometry>
        <box size="0.04 .9 2.0"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0.45 0" rpy="0 0 0" />
      <geometry>
        <box size="0.04 .9 2.0"/>
      </geometry>
    </collision>
  </link>

  <joint name="door_hinge" type="revolute">
    <parent link="base_link"/>
    <child link="door"/>
    <origin xyz="0 0 1.1"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="100"/>
  </joint>

</robot>
